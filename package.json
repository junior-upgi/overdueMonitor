{
  "name": "overdue-monitor",
  "version": "0.0.1",
  "main": "overdueMonitor.js",
  "scripts": {
    "clear:build": "rm -rf build && mkdir build && mkdir build/model && mkdir build/module",
    "clear:public": "rm -rf public && mkdir public && mkdir public/js && mkdir public/css && mkdir public/fonts",
    "lint": "eslint src",
    "nsp": "nsp check",
    "transpile": "browserify src/frontend/js/entry.js -o public/js/bundle.js -d -t [ babelify --presets [ es2015 ] --no-sourceMaps ]",
    "favicon": "cp -r src/frontend/*.png public/",
    "html": "cp -r src/frontend/*.html public/",
    "jquery": "cp -r node_modules/jquery/dist/jquery.min.js public/js/",
    "bootstrapLib": "cp -r node_modules/bootstrap/dist/js/bootstrap.min.js public/js/",
    "bootstrapCss": "cp -r node_modules/bootstrap/dist/css/*.min.css public/css/",
    "bootstrapFont": "cp -r node_modules/bootstrap/dist/fonts/*.* public/fonts/",
    "serverFile": "cp -r src/server.js build/",
    "modelDir": "cp -r src/model/*.js build/model/",
    "moduleDir": "cp -r src/module/*.js build/module/",
    "directCopy": "npm-run-all --parallel favicon html jquery bootstrapLib bootstrapCss bootstrapFont serverFile modelDir moduleDir",
    "start:server": "nodemon ./build/server.js",
    "preProcessor": "npm-run-all --parallel clear:build clear:public lint nsp",
    "start": "npm-run-all preProcessor transpile directCopy start:server"
  },
  "dependencies": {
    "babel-standalone": "^6.19.0",
    "body-parser": "^1.15.2",
    "bootstrap": "^3.3.7",
    "chart.js": "^2.4.0",
    "cors": "^2.8.1",
    "cron": "^1.1.1",
    "express": "^4.14.0",
    "handlebars": "^4.0.6",
    "jquery": "^3.1.1",
    "json2xls": "^0.1.2",
    "jsonwebtoken": "^7.2.1",
    "ldapjs": "^1.0.1",
    "moment-timezone": "^0.5.10",
    "mssql": "^3.3.0",
    "multer": "^1.2.1",
    "nodemailer": "^2.7.0",
    "numeral": "^2.0.1",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-clean": "^0.3.2",
    "gulp-connect": "^5.0.0",
    "gulp-nodemon": "^2.2.1",
    "morgan": "^1.7.0",
    "npm-run-all": "^3.1.2",
    "nsp": "^2.6.2",
    "uglifyify": "^3.0.4",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junior-upgi/overdueMonitor.git"
  },
  "author": "Chia-Yu Tsai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/junior-upgi/overdueMonitor/issues"
  },
  "homepage": "https://github.com/junior-upgi/overdueMonitor#readme",
  "description": ""
}
